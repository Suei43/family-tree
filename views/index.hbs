<!DOCTYPE html>
<html lang="en">
  <head>
    <title>{{title}}</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css">
  </head>
  <body>
    <div class="home_nav">
			<nav>
				<ul>
					<li><a href="/">Home</a></li>
					{{#if loggedIn}}
            
          {{else}}
            <li><a href="/register">Register</a></li>
            <li><a href="/login">Login</a></li>
          {{/if}}
					<li><a href="/edit_tree">Edit Tree</a></li>
				</ul>
			</nav>
		</div>
    <div id="container">
      {{#if message}}
        <div class="alert alert-{{alerttype}} text-center show" id="fadeDiv" role="alert">
          {{message}}
          <button type="button" class="close" data-dismiss="alert" id="fadeButton"><span aria-hidden="true">&times;</span></button>
        </div>
      {{/if}}
        <h1 >The <span id="family_name">family</span>'s</h1>
        <h4>FAMILY TREE</h4>
        <div id="a-wrapper">
          <a href="/uchegbu_family_tree" class="btn">Click here to view</a>
          {{#if loggedIn}}
          {{else}}
            <a href="/login" class="btn">Login</a>
          {{/if}}
        </div>
        <form method="get" action="/family_tree_search">
            <i class="fas fa-search"></i>
                <input type="text" name="search" id="search-name" placeholder="Search by Family Name"/>
        </form>
        <p class="info"><em>documenting generations and more to come..</em></p>
    </div>
    <script>
      document.body.style.zoom = "100%";
      const element = document.getElementById("family_name");
      element.innerHTML = "Uchegbu";

      var fadeButton = document.getElementById('fadeButton');
      var fadeDiv = document.getElementById('fadeDiv');
      fadeButton.addEventListener('click', function() {
        fadeDiv.style.display = 'none';
  });
  setTimeout(()=>{
    fadeDiv.style.display = 'none';
  },3000);
  var isloggedin = {{loggedIn}};
  console.log(isloggedin);
    </script>
    <script src="javascripts/random.js"></script>
    <!--<script src="src/index.js"></script>-->
  </body>
</html>